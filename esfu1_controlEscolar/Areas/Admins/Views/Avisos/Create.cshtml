@model esfu1_controlEscolar.Areas.Admins.Models.Avisos

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm("Create", "Avisos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Registrar aviso</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Imagen</label>
        <div class="col-md-6 col-lg-6 col-sm-12 col-xs-12">
            <div class="col-md-55">
                <div class="thumbnail">
                    <div class="image view view-first">
                        <img style="height: 50%; width:50%; display: block;" src="~/img/extraordinarios/fa-image.png" alt="imagen" id="image_upload_preview" />
                    </div>
                    <div class="caption">
                        <input id="InputFile" type="file" class="form-control" name="img"  />
                    </div>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Aviso_img, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Descripcion del aviso</label>
        <div class="col-md-6">
            <textarea class="form-control" name="Aviso_descripcion" required="" style="height:250px;">

             </textarea>
            @Html.ValidationMessageFor(model => model.Aviso_descripcion, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="hidden" value="@DateTime.Now" name="Aviso_fecha"/>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar" class="btn btn-primary" />
            <a class="btn btn-default" href="@Url.Action("Index","Avisos")">Cancelar</a>
        </div>
    </div>
</div>
}

@section Scripts{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    jQuery('#image_upload_preview').attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        jQuery("#InputFile").change(function () {
            readURL(this);
        });

    </script>
}