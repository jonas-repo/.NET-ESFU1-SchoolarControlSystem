@model IEnumerable<esfu1_controlEscolar.Areas.Admins.Models.Avisos>

@{
    ViewBag.Title = "Index";
}



<p>
    <a class="btn btn-primary" href="@Url.Action("Create","Avisos")"> Registrar aviso</a>
</p>
<table class="table table-hover table-striped table-bordered" style="background-color:white;">
    <caption>Tabla avisos</caption>
    <thead>
        <tr>
            <th>
                Fecha
            </th>
            <th>
                Imagen
            </th>
            <th>
                Descripcion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Aviso_fecha)
            </td>
            <td>
                @if (!@Html.DisplayFor(modelItem => item.Aviso_img).Equals("vacio"))
                {
                    <img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.Aviso_img)" style="height:150px;" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aviso_descripcion)
            </td>
            <td>
                <a href="@Url.Action("Edit","Avisos", new { id = item.Aviso_id})" class="btn btn-info">Editar</a>
                <a onclick="return confirm('¿Borrar al alumno?');" href="@Url.Action("DeleteConfirmed","Avisos", new { id = item.Aviso_id})" class="btn btn-danger">Borrar</a>
            </td>

        </tr>
        }
    </tbody>
   
</table>
