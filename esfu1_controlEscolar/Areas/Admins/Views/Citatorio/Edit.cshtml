@model esfu1_controlEscolar.Areas.Admins.Models.Citatorio

@{
    ViewBag.Title = "Editar citatorio";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Citatorio</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Descripcion</label>
            <div class="col-md-10">
                <textarea class="form-control" name="citatorio.Citatorio_descripcion" required style="height:250px;">
                @Model.Citatorio_descripcion
                </textarea>
                @Html.ValidationMessageFor(model => model.Citatorio_descripcion, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" value="@DateTime.Now" name="citatorio.Citatorio_fecha" />
        <input type="hidden" value="@Model.Alumno.Alumno_id" name="citatorio.Alumno.Alumno_id" />
        <input type="hidden" value="@Model.Citatorio_id" name="citatorio.Citatorio_id"/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-default" href="@Url.Action("Index","Citatorio")">Cancelar</a>
            </div>
        </div>
    </div>
}

