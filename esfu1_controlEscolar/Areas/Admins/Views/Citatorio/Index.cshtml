@model IEnumerable<esfu1_controlEscolar.Areas.Admins.Models.Alumno>

@{
    ViewBag.Title = "Indice - Alumnos";
}


<table class="table table-bordered table-striped table-responsive" style="background-color:white;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoPaterno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoMaterno)
            </th>
            <th>
                Citatorios
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApellidoPaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApellidoMaterno)
                </td>
                <td>
                    <ul>
                        @foreach (var citatorio in item.Citatorios)
                        {
                            <li>
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-info" href="@Url.Action("Edit","Citatorio", new { id = citatorio.Citatorio_id})" title="editar reporte">
                                        editar reporte de @citatorio.Citatorio_fecha
                                    </a>
                                    <a class="btn btn-danger btn-sm" onclick="return confirm('¿Borrar registro');" href="@Url.Action("DeleteConfirmed","Citatorio", new { id = citatorio.Citatorio_id})" title="eliminar citatorio">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </a>
                                </div>

                            </li>
                        }
                    </ul>
                </td>
                <td>
                    <a href="@Url.Action("Create","Citatorio", new { id = item.Alumno_id})" class="btn btn-info">Agregar citatorio</a>
                </td>
            </tr>
        }

    </tbody>


</table>