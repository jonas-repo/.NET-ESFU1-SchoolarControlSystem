@model esfu1_controlEscolar.Areas.Admins.Models.DocumentosFaltantes

@{
    ViewBag.Title = "Editar documentos faltantes";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Documentos faltantes</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Descripcion</label>
        <div class="col-md-10">
            <textarea class="form-control" name="documentosFaltantes.DocumentosFaltantes_descripcion" required="" style="height:250px;">
                    @Model.DocumentosFaltantes_descripcion
                </textarea>
            @Html.ValidationMessageFor(model => model.DocumentosFaltantes_descripcion, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="hidden" value="@DateTime.Now" name="documentosFaltantes.DocumentosFaltantes_fecha" />
    <input type="hidden" value="@Model.Alumno.Alumno_id" name="documentosFaltantes.Alumno.Alumno_id" />
    <input type="hidden" value="@Model.DocumentosFaltantes_id" name="documentosFaltantes.DocumentosFaltantes_id" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrar" class="btn btn-primary" />
            <a class="btn btn-default" href="@Model">Cancelar</a>
        </div>
    </div>
</div>
}