@{
    ViewBag.Title = "Calificaciones";
    ICollection<esfu1_controlEscolar.Areas.Admins.Models.Calificacion> calificaciones = ViewBag.calificaciones;
    int count = 0;
}


@if (calificaciones.Count() == 0)
{
    <div>
        <img src="~/Areas/assets/img/icon.jpg" />
    </div>
}

<div class="container-fluid">
    <div class="row">
        @foreach (var calificacion in calificaciones)
        {
            <div class="panel-group col-sm-3">
                <div class="panel panel-primary">
                    <div class="panel-heading" >
                        <h4 class="panel-title">
                            <a data-toggle="collapse" href="#collapse-@count">
                                @calificacion.Materia
                            </a>
                        </h4>
                                             
                    </div>
                    <div id="collapse-@count" class="panel-collapse collapse">
                        <div class="panel-body">
                            <ul class="list-group">

                                <li class="list-group-item">
                                    <label>Primer Bimestre</label>

                                    <ul>
                                        <li>
                                            Calificacion:  <b>@calificacion.PrimerBimestre</b>
                                        </li>
                                        <li>
                                            Faltas: <b> @calificacion.FaltasPrimerBimestre</b>
                                        </li>
                                    </ul>
                                </li>
                                <li class="list-group-item">
                                    <label>Segundo Bimestre</label>

                                    <ul>
                                        <li>
                                            Calificacion:  <b>@calificacion.SegundoBimestre</b>
                                        </li>
                                        <li>
                                            Faltas: <b> @calificacion.FaltasSegundoBimestre</b>
                                        </li>
                                    </ul>
                                </li>
                                <li class="list-group-item">
                                    <label>Tercer Bimestre</label>

                                    <ul>
                                        <li>
                                            Calificacion:  <b>@calificacion.TercerBimestre</b>
                                        </li>
                                        <li>
                                            Faltas: <b> @calificacion.FaltasTercerBimestre</b>
                                        </li>
                                    </ul>
                                </li>
                                <li class="list-group-item">
                                    <label>Cuarto Bimestre</label>

                                    <ul>
                                        <li>
                                            Calificacion:  <b>@calificacion.CuartoBimestre</b>
                                        </li>
                                        <li>
                                            Faltas: <b> @calificacion.FaltasCuartoBimestre</b>
                                        </li>
                                    </ul>
                                </li>
                                <li class="list-group-item">
                                    <label>Quinto Bimestre</label>

                                    <ul>
                                        <li>
                                            Calificacion:  <b>@calificacion.QuintoBimestre</b>
                                        </li>
                                        <li>
                                            Faltas: <b> @calificacion.FaltasQuintoBimestre</b>
                                        </li>
                                    </ul>
                                </li>

                                @if (calificacion.TotalCalificacion != null && calificacion.TotalFaltas != null)
                                {
                                    <li class="list-group-item"><label>Calificación Total</label> <span class="badge" style="background-color:blue;">@calificacion.TotalCalificacion.Value.ToString("0.00")</span></li>
                                    <li class="list-group-item"><label>Total de faltas</label> <span class="badge">@calificacion.TotalFaltas</span></li>
                                }

                            </ul>
                        </div>
                        <div class="panel-footer"></div>
                    </div>                    
                </div>
            </div>
            count++;
        }
    </div>
</div>





