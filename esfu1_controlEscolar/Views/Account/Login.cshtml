@using esfu1_controlEscolar.Models
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="League Coming Soon Responsive, Signup form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <!--barraNavegación-->
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ESFU 1</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1">

    <link rel="shortcut icon" href="~/assets/img/minilogo.ico">
    <!--barraNavegación-->

    <link href="~/assets/login/css/font-awesome.min.css" rel="stylesheet" media="all" />

    <link href="~/assets/login/css/style.css" rel="stylesheet" />

    <!--webfonts-->
    <link href='//fonts.googleapis.com/css?family=Ubuntu+Condensed' rel='stylesheet' type='text/css'>
    <!--//webfonts-->
</head>

<body>
    <!--SIGN UP-->
    <h1>Control Escolar ESFU 1</h1>
    <div class="login-form">
        <h2>Iniciar Sesión</h2>
        <ul class="form">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @Style = "background-color:orangered" })
                <li>
                    @Html.TextBoxFor(m => m.Email, new { @Placeholder = "Nombre de usuario", @Required = "true" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })<a href="" class=" icon user"></a>
                </li>
                <li>
                    @Html.PasswordFor(m => m.Password, new { @Placeholder = "contraseña", @Required = "true" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </li>
                <div class="but-bottom">
                    @Html.CheckBoxFor(m => m.RememberMe)<span>Recordarme</span>
                    <a href="@Url.Action("ForgotPassword", "Account")">¿Olvidaste tu contraseña?</a>
                    <div class="clear"> </div>
                </div>
                <div class="w3_log">
                    <input type="submit" value="Iniciar" >
                </div>
                <div class="w3_log">
                    <a href="@Url.Action("Index", "Home")" class="back">
                        Regresar
                    </a>
                </div>
                <div class="clear"> </div>
            }
        </ul>
    </div>
    <div class="clear"> </div>


    <div class="clear"> </div>

    <!--/SIGN UP-->
    <div class="copyrights">
        <p>&copy; @DateTime.Now.Year. Todos los derechos reservados |  Diseñado por ISC. Ricardo Moreno Díaz.</p>
    </div>
    <div>
        <p></p>
    </div>
    <!---728x90--->
</body>
</html>

