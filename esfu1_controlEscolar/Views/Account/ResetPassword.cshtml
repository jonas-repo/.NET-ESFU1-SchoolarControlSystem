@model esfu1_controlEscolar.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Restablecer";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3 class="title">@ViewBag.Title</h3>
        </div>
        <div class="clearfix"></div>
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-lg-2 control-label" })
                <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-lg-2 control-label" })
                <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-lg-2 control-label" })
                <div class="col-lg-10 col-md-12 col-sm-12 col-xs-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 col-lg-10 col-sm-12 col-xs-12">
                    <input type="submit" class="btn btn-default" value="Enviar" />
                </div>
            </div>
        }

    </div>
</div>

