<!-- inica header -->
<header id="home">
    <div class="header-area">
        <div class="header-top primary-bg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-12">
                        <div class="header-contact-info d-flex">
                            <div class="header-contact header-contact-phone">
                                <span class="ti-mobile"></span>
                                <p class="phone-number">(452) 5234510</p>
                            </div>
                            <div class="header-contact header-contact-email">
                                <span class="ti-email"></span>
                                <p class="email-name">secuesfu1@gmail.com</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
                        <div class="agileits_w3layouts_sign_in">
                            <ul></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-bottom-area header-sticky" style="transition: .0s;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-2 col-md-6 col-6">
                        <div class="logo">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="~/assets/img/logo/logo.png" />
                            </a>
                        </div>
                    </div>
                    <div class="col-xl-10 col-lg-10 col-md-6 col-6">
                        <div class="header-bottom-icon f-right">
                            <ul></ul>
                        </div>
                        <div class="main-menu f-right">
                            <nav id="mobile-menu" style="display: block;">
                                <ul>
                                    <li>
                                        <a href="@Url.Action("Index", "Home")">INICIO</a>
                                    </li>
                                    <li>
                                        <a href="#">FORMACIÓN ACADÉMICA</a>
                                        <ul class="submenu">
                                            <li>
                                                <a href="@Url.Action("TroncoComun", "Home")">TRONCO COMÚN</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Talleres", "Home")">TALLERES</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="#">NOSOTROS</a>
                                        <ul class="submenu">
                                            <li>
                                                <a href="@Url.Action("Mision", "Home")">MISIÓN</a>
                                            </li>
                                            <li>
                                                <a href="@Url.Action("Vision", "Home")">VISIÓN</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Ubicacion", "Home")">UBICACIÓN</a>
                                    </li>
                                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a href="~/Admins/HomeAdmin/Index">CONTROL ESCOLAR</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a href="@Url.Action("Login", "Account")">CONTROL ESCOLAR</a>
                                        </li>
                                    }

                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mobile-menu"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
